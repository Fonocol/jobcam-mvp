/// Enums
enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  TEMPORARY
  VOLUNTEER
  OTHER
}

enum JobStatus {
  DRAFT
  PUBLISHED
  CLOSED
  ARCHIVED
}

enum RemoteType {
  ONSITE
  HYBRID
  REMOTE
  ANY
}

enum ApplicationStatus {
  PENDING
  REVIEWED
  INTERVIEW
  REJECTED
  HIRED
  WITHDRAWN
}

enum Currency {
  XAF
  EUR
  USD
  GBP
  OTHER
}

// --- enums
enum CompanyRole {
  COMPANY_MANAGER
  MEMBER
}
